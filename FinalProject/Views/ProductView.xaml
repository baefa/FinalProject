<UserControl x:Class="FinalProject.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Products"/>
        <DataGrid Name="ProductDataGrid" AutoGenerateColumns="False" Margin="10,50,10,10">
        </DataGrid>
        <Button x:Name="CreateButton" Content="Создать" HorizontalAlignment="Left" Margin="17,25,0,0"
                VerticalAlignment="Top" Width="auto" Click="CreateButton_Click" />
        <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="75,25,0,0"
                VerticalAlignment="Top" Width="auto" Click="DeleteButton_Click" />
        <Button x:Name="EditButton" Content="Изменить" HorizontalAlignment="Left" Margin="135,25,0,0"
                VerticalAlignment="Top" Width="auto" Click="EditButton_Click" />
    </Grid>
</UserControl>
